@import "../../assets/stylus/px2rem.styl"

.top-wrapper
  position: fixed
  top: 0
  left: 0
  width: 100%
  z-index: 10
.banner
  padding-top: px2rem(44)
  height: px2rem(200)
  img
    width: 100%
    height: 75%
  div
    display: flex
    justify-content: center
    align-items: center
    span
      display: inline-block
      padding: px2rem(8) px2rem(16)
      margin: 0 px2rem(8)
      font-size: px2rem(14)
      color: #fff
      background-color: #ffb6c1
      border-radius: px2rem(4)
      box-shadow: 0 px2rem(2) px2rem(4) rgba(0, 0, 0, 0.1)
      cursor: pointer